<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #46178F;" 
      xmlns:fx="http://javafx.com/fxml" fx:controller="nodos_sd.controlador.AdminController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Panel de Administrador" style="-fx-text-fill: white;">
        <font>
            <Font name="Montserrat Bold" size="24.0"/>
        </font>
    </Label>

    <Button fx:id="createRoomButton" text="Crear Sala" onAction="#createRoom"
            style="-fx-background-color: #0081C6; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20 10 20; -fx-background-radius: 5;">
        <font>
            <Font name="Montserrat" size="18.0"/>
        </font>
    </Button>
</VBox>