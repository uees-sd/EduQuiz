<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #46178F;" 
      xmlns:fx="http://javafx.com/fxml" fx:controller="nodos_sd.controlador.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="EduQuiz" style="-fx-text-fill: white;">
        <font>
            <Font name="Montserrat Bold" size="36.0"/>
        </font>
    </Label>

    <Button fx:id="playerButton" text="Jugador" onAction="#showPlayerView" 
            style="-fx-background-color: #FF3355; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20 10 20; -fx-background-radius: 5;">
        <font>
            <Font name="Montserrat" size="18.0"/>
        </font>
    </Button>

    <Button fx:id="adminButton" text="Administrador" onAction="#showAdminView"
            style="-fx-background-color: #44D62C; -fx-text-fill: white; -fx-font-size: 18px; -fx-padding: 10 20 10 20; -fx-background-radius: 5;">
        <font>
            <Font name="Montserrat" size="18.0"/>
        </font>
    </Button>
</VBox>